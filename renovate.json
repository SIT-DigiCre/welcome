{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", "helpers:pinGitHubActionDigests"],
  "labels": ["renovate"],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["on sunday"]
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "digest",
        "lockFileMaintenance",
        "minor",
        "patch",
        "pin",
        "pinDigest"
      ],
      "automerge": true
    }
  ],
  "schedule": ["on sunday"],
  "timezone": "Asia/Tokyo"
}
